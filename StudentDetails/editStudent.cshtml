@model PassTheDataFromModelMVC.Models.Student

<form class= "mt-3" method="post" asp-controller="StudentDetails" asp-action="editStudent">
    <div class="form-group">
        <label asp-for="Name">Student Name</label>
        <input type="text" asp-for="Name" class="form-control" >
    </div>

    <div class="form-group">
        <label asp-for="Semester">Semester</label>
        <input type="text" asp-for="Semester" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Branch">Branch</label>
        <input type="text" asp-for="Branch" class="form-control">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

    <a class="btn btn-danger" asp-controller="StudentDetials" asp-action="studentInfo">Cancel</a>

</form>
